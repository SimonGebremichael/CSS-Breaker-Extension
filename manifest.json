{
    "name": "Destroyer of windows",
    "description": "A simply readable Hacker News app.",
    "manifest_version": 2,
    "version": "1.1",
    
     "browser_action": {
         "default_icon": "logo.png"
    },

    "content_scripts": [
       {
         "matches": ["<all_urls>"],
         "js": ["content.js"]
       }
    ],
    
    "permissions": [
    "tabs"
    ]
}
